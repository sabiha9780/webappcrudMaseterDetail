@model IEnumerable<WebAppCurdMD.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoinDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
           Experiences
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            <ol>
                @foreach(var exp in item.Experiences)
                {
                    <li>
                        @exp.CompanyName (@exp.Designation) -@exp.ServicePeriod
                    </li>
                }
            </ol>
        </td>
        <td class="btn-group">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class= "btn btn-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id },new{ @class = "btn btn-info"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new{ @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
